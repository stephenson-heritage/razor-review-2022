            <th>
                @Html.DisplayNameFor(model => model.School[0].StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School[0].City)
