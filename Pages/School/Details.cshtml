@page
@model razor_review.Pages.School.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>School</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.StreetNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.StreetNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.StreetName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.StreetName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.PostalCode)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.PostalCode)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.City)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.City)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.Province)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.Province)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.School.Phone)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.School.Phone)
		</dd>
	</dl>
</div>

<div>
	<h3>Available Classes</h3>
	@if (Model.School.AvailableClasses != null)
	{
		foreach (var cl in Model.School.AvailableClasses)
		{
			<div>@cl.Name</div>

		}
	}

</div>
<div>
	<a asp-page="./Edit" asp-route-id="@Model.School.SchoolId">Edit</a> |
	<a asp-page="./Index">Back to List</a>
</div>
